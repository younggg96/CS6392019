<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context=".ContentActivity"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/food_top_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/content_img"
                    android:layout_width="match_parent"
                    android:layout_height="231dp" />


                <!-- Back button -->

                <ImageView
                    android:id="@+id/recipe_button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="?attr/selectableItemBackground"
                    app:srcCompat="@drawable/ic_close_white_24px" />

                <ImageView
                    android:id="@+id/recipe_button_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="340dp"
                    android:layout_marginTop="5dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@mipmap/share" />

                <ImageView
                    android:id="@+id/recipe_button_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="380dp"
                    android:layout_marginTop="5dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@mipmap/location" />

            </RelativeLayout>



        </RelativeLayout>

        <LinearLayout

            android:id="@+id/view_empty_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="250dp"
            android:orientation="vertical"
            tools:visibility="visible"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/content_title"
                android:text="Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#009688"
                android:textSize="28dp"
                android:textStyle="bold|italic"
                />




            <TextView
                android:text="Ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:textSize="24dp"
                android:textStyle="bold|italic" />


            <TextView
                android:id="@+id/content_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="sans-serif-light"
                android:textAlignment="textStart"
                android:textColor="#323333"
                android:textSize="18dp" />

            <TextView
                android:text="Instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:textSize="24dp"
                android:textStyle="bold|italic" />


            <TextView
                android:id="@+id/content_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:fontFamily="sans-serif-light"
                android:textAlignment="textStart"
                android:textColor="#323333"
                android:textSize="18dp" />


        </LinearLayout>
    </RelativeLayout>

</ScrollView>
